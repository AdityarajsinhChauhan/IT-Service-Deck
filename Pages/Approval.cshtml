@page

@using Microsoft.AspNetCore.Identity
@using IT_Service_Deck.Models

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
@model IT_Service_Deck.Pages.ApprovalModel
@{
}<div class="main">
    <div class="headerWrapper">
        <div class="headerTitle">
            <h4>Profile</h4>
        </div>
        <div class="userInfo">
            @if (SignInManager.IsSignedIn(User))
            {
                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                    <button id="logout" type="submit" style="color:#514a9d;" class="nav-link btn btn-link text-dark border-0">Logout</button>
                </form>

            }
            else
            {
                <a class="nav-link text-dark" id="register" style="color:#514a9d;" asp-area="Identity" asp-page="/Account/Register">Register</a>


                <a class="nav-link text-dark" id="login" style="color:#514a9d;" asp-area="Identity" asp-page="/Account/Login">Login</a>

            }
        </div>
    </div>

    <div class="cardContainer infoContainer">
        <div>Request Id:</div><div> @Model.Request.Id</div>
        <div>Request Type: </div><div>@Model.Request.RequestType</div>
        <div>Request Duration: </div><div>@Model.Request.RequestDuration</div>
        <div>Status: </div><div>@Model.Request.Status</div>
        <div>Requested At: </div><div>@Model.Request.RequestedAt</div>
        <div>Employee Name: </div><div>@Model.Request.Employee.Name</div>
        <div>Employee Email: </div><div>@Model.Request.Employee.Email</div>
        <div>Employee Department: </div><div>@Model.Request.Employee.Department</div>
        <div>Employee Phone Number: </div><div>@Model.Request.Employee.PhoneNumber</div>
        <div>Employee Created At: </div><div>@Model.Request.Employee.CreatedAt</div>

        <form method="post">
            <label for="decision">Select Decision:</label>
            <select id="decision" name="decision">
                <option value="approve">Approve</option>
                <option value="reject">Reject</option>
            </select>
            <input type="hidden" name="RequestId" value="@Model.Request.Id" asp-for="RequestId" />
            <div class="button">
                <button type="submit">Submit</button>
            </div>
        </form>



        
    </div>
